<AuthorizeView>
    <Authorized>
        <MudText Class="mr-4">Hello, @context.User.FindFirst("name").Value!</MudText>
        <MudButton Class="mr-3" Variant="Variant.Text" Link="MicrosoftIdentity/Account/SignOut" Color="Color.Info">Log out</MudButton>
    </Authorized>
    <NotAuthorized>
        <MudButton Class="mr-3" Variant="Variant.Text" Link="MicrosoftIdentity/Account/SignIn">Log in</MudButton>
    </NotAuthorized>
</AuthorizeView>