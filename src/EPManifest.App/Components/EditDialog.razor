<MudDialog>
    <DialogContent>
        <EditForm Model="@_entity" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <MudItem Class="mt-n4">
                <MudTextField Label="Code" @bind-Text="_entity.Code" T="string"></MudTextField>

                <MudTextField Label="Name" @bind-Text="_entity.Name" T="string"></MudTextField>
            </MudItem>
            <MudItem xs="12" Class="d-flex justify-space-between py-2 px-1 mt-2">
                <MudButton Color="Color.Secondary" OnClick="Cancel">Cancel</MudButton>
                <MudButton Color="@Color" ButtonType="ButtonType.Submit">@ButtonText</MudButton>
            </MudItem>
        </EditForm>
    </DialogContent>
</MudDialog>