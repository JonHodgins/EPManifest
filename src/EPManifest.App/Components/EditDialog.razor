<MudDialog>
    <DialogContent>
        <EditForm Model="@entity" OnValidSubmit="OnValidSubmit">
            <DataAnnotationsValidator />
            <ValidationSummary />
            <MudItem>
                <MudTextField Label="Code" @bind-Text="entity.Code" T="string"></MudTextField>
            </MudItem>

            <MudItem>
                <MudTextField Label="Name" @bind-Text="entity.Name" T="string"></MudTextField>
            </MudItem>

            <MudButton OnClick="Cancel">Cancel</MudButton>
            <MudButton Color="@Color" ButtonType="ButtonType.Submit">@ButtonText</MudButton>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton Color="@Color" ButtonType="ButtonType.Submit" OnClick="OnValidSubmit">@ButtonText</MudButton>
    </DialogActions>
</MudDialog>