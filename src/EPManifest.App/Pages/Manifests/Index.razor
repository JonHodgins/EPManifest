@page "/manifests"

@if (_isLoaded == false)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">

        <MudTable Items="@manifests" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" @bind-SelectedItem="selectedItem">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Manifests</MudText>
                <MudToolBarSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search by consignor or consignee" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
                <MudToolBarSpacer />
                <MudButton Color="Color.Success" Variant="Variant.Outlined" OnClick="(() => Create())">New Manifest</MudButton>
            </ToolBarContent>
            <ColGroup>
                <col style=" width: 5%" />
                <col style="width: 25%" />
                <col style="width: 15%" />
                <col style="width: 15%" />
                <col style="width: 10%" />
                <col style="width: 10%" />
                <col style="width: 5%" />
                <col style="width: 15%" />
            </ColGroup>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Consignor</MudTh>
                <MudTh>Consignee</MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<EPManifest.Core.Manifest, object>(m => m.Carrier.Name)">Carrier</MudTableSortLabel></MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<EPManifest.Core.Manifest, object>(m => m.DateShipped?.ToString())">Shipped</MudTableSortLabel></MudTh>
                <MudTh>Scheduled Arrival</MudTh>
                <MudTh># Items</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Consignors">@String.Join(", ", context.Consignors.Select(c => c.Name))</MudTd>
                <MudTd DataLabel="Consignee">@context.Consignee.Name</MudTd>
                <MudTd DataLabel="Carrier">@context.Carrier.Name</MudTd>
                <MudTd DataLabel="Shipped">@context.DateShipped?.ToLongDateString()</MudTd>
                <MudTd DataLabel="Scheduled Arrival">@context.DateScheduledArrival?.ToLongDateString()</MudTd>
                <MudTd DataLabel="# Items">@context.Items.Count</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Info" OnClick="(() => Details(context.Id))"></MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" OnClick="(() => Edit(context.Id))"></MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" OnClick="(() => Delete(context))"></MudIconButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
        <div class="d-flex flex-wrap mt-4">
            <MudSwitch @bind-Checked="@hover" Color="Color.Primary">Hover</MudSwitch>
            <MudSwitch @bind-Checked="@dense" Color="Color.Secondary">Dense</MudSwitch>
            <MudSwitch @bind-Checked="@striped" Color="Color.Tertiary">Striped</MudSwitch>
            <MudSwitch @bind-Checked="@bordered" Color="Color.Warning">Bordered</MudSwitch>
            <MudToolBarSpacer />
            <MudText Inline="true" Class="align-self-center" Style="min-width:200px;">Selected: @selectedItem?.Id</MudText>
        </div>
    </MudContainer>
}