@page "/manifests/edit/{id:int}"

<h3>Edit Manifest</h3>

@if (_isLoaded == false)
{
    <p><em>Loading...</em></p>
}
else
{
    <div style="max-width: 400px;">
        <EditForm Model="@manifest" OnValidSubmit="Update">
            <DataAnnotationsValidator />
            <MudCard>
                <MudCardContent>
                    <MudTextField Label="Consignor" HelperText="Max. 8 characters"
                                  @bind-Value="manifest.Consignor" For="@(() => manifest.Consignor.Name)" />
                    @*<MudTextField Label="Email" Class="mt-3"
                                      @bind-Value="manifest.Email" For="@(() => manifest.Email)" />
                        <MudTextField Label="Password" HelperText="Choose a strong password" Class="mt-3"
                                      @bind-Value="manifest.Password" For="@(() => manifest.Password)" InputType="InputType.Password" />
                        <MudTextField Label="Password" HelperText="Repeat the password" Class="mt-3"
                                      @bind-Value="manifest.Password2" For="@(() => manifest.Password2)" InputType="InputType.Password" />*@
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Register</MudButton>
                </MudCardActions>
            </MudCard>
            <MudText Typo="Typo.body2" Align="Align.Center" Class="my-4">
                Fill out the form correctly to see the success message.
            </MudText>

            <MudExpansionPanels>
                <MudExpansionPanel Text="Show Validation Summary">
                    @if (success)
                    {
                        <MudText Color="Color.Success">Success</MudText>
                    }
                    else
                    {
                        <MudText Color="@Color.Error">
                            <ValidationSummary />
                        </MudText>
                    }
                </MudExpansionPanel>
            </MudExpansionPanels>
        </EditForm>
    </div>

    @*<div class="row">
