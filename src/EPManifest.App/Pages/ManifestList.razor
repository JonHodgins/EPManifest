@page "/manifests/list"

@if (_isLoaded == false)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-16">

        <MudTable Items="@manifests" Dense="@dense" Hover="@hover" Bordered="@bordered" Striped="@striped" Filter="new Func<EPManifest.Core.Manifest,bool>(FilterFunc)" @bind-SelectedItem="selectedItem">
            <ToolBarContent>
                <MudText Typo="Typo.h6">Manifests</MudText>
                <MudToolBarSpacer />
                <MudTextField @bind-Value="searchString" Placeholder="Search by consignor or consignee" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0"></MudTextField>
            </ToolBarContent>
            <HeaderContent>
                <MudTh>Id</MudTh>
                <MudTh>Consignor</MudTh>
                <MudTh>Consignee</MudTh>
                <MudTh>Carrier</MudTh>
                <MudTh><MudTableSortLabel SortBy="new Func<EPManifest.Core.Manifest, object>(m => m.DateShipped.ToString())">Date Shipped</MudTableSortLabel></MudTh>
                <MudTh>Scheduled Arrival</MudTh>
                <MudTh># Items</MudTh>
                <MudTh></MudTh>
            </HeaderContent>
            <RowTemplate>
                <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Consignor">@context.Consignor.Name</MudTd>
                <MudTd DataLabel="Consignee">@context.Consignee.Name</MudTd>
                <MudTd DataLabel="Carrier">@context.Carrier.Name</MudTd>
                <MudTd DataLabel="Date Shipped">@context.DateShipped.ToLongDateString()</MudTd>
                <MudTd DataLabel="Scheduled Arrival">@context.DateScheduledArrival?.ToLongDateString()</MudTd>
                <MudTd DataLabel="# Items">@context.Items.Count</MudTd>
                <MudTd>
                    <MudIconButton Icon="@Icons.Material.Filled.Info"></MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.Edit" Color="Color.Primary"></MudIconButton>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" @onclick="(() => Delete(context))"></MudIconButton>
                </MudTd>
            </RowTemplate>
            <PagerContent>
                <MudTablePager />
            </PagerContent>
        </MudTable>
        <div class="d-flex flex-wrap mt-4">
            <MudSwitch @bind-Checked="@hover" Color="Color.Primary">Hover</MudSwitch>
            <MudSwitch @bind-Checked="@dense" Color="Color.Secondary">Dense</MudSwitch>
            <MudSwitch @bind-Checked="@striped" Color="Color.Tertiary">Striped</MudSwitch>
            <MudSwitch @bind-Checked="@bordered" Color="Color.Warning">Bordered</MudSwitch>
            <MudToolBarSpacer />
            <MudText Inline="true" Class="align-self-center" Style="min-width:200px;">Selected: @selectedItem?.Id</MudText>
        </div>
    </MudContainer>
}